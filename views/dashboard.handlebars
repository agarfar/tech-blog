<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="display-flex flex-row row mt-4">
    {{#if posts.length}}
    <div class="col-md-6 post-list">
        <h3>Current posts:</h3>
        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary" id = "new-post">New Post</button>
</div>

<script src="./js/dashboard.js"></script>