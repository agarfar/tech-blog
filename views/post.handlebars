<div class="text-center">
  <h2>{{title}}</h2>
  {{!-- <p>{{{get_emoji}}}</p> --}}
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#if comments.length}}
  {{#each comments as |comment|}}
  <div class="flex-column">
    <p>{{comment.content}}</p>
    <p>Created by {{comment.user.name}} on {{format_date date_created}}</p>
  </div>
  {{/each}}
  {{/if}}
  <input type="hidden" value={{id}} id='id'>
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-desc">Comment:</label>
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" id="comment-button">Add Comment</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>